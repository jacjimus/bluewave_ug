{
  "compilerOptions": {
        "module": "commonjs",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": false,
        "sourceMap": false,
        "outDir": "build",
        "incremental": true,
        "skipLibCheck": true,
        "moduleResolution": "node",

       
  },
  "exclude": [
      "node_modules",
      "**/*.spec.ts",
      "**/*.test.ts",
      "./src/**/__tests__/*.ts",
      "./build/**/*",
      "./src/**/__menu-ken-builder__/*.ts",
      "./src/**/__controllers__/*.ts"
  ],
  "include": [
      "src/**/*.ts", "app.ts"]
}   

